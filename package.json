{
  "name": "clipforge",
  "version": "0.1.0",
  "private": true,
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development bun run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development bun run electron:compile && cross-env NODE_ENV=development electron .\"",
    "electron:build": "bun run build && bun run electron:compile && electron-builder",
    "electron:build:mac": "bun run build && bun run electron:compile && electron-builder --mac",
    "electron:build:win": "bun run build && bun run electron:compile && electron-builder --win",
    "electron:build:linux": "bun run build && bun run electron:compile && electron-builder --linux"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "*",
    "@ffmpeg/util": "*",
    "@reduxjs/toolkit": "^2.7.0",
    "@remotion/media-parser": "^4.0.369",
    "@remotion/player": "^4.0.369",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^11.0.0",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "^10.4.21",
    "basehub": "^8.2.11",
    "eslint": "^9.38.0",
    "eslint-config-next": "^15.5.0",
    "idb": "^8.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.548.0",
    "moveable": "^0.53.0",
    "next": "^15.5.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-moveable": "^0.56.0",
    "react-redux": "^9.2.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/electron": "^1.6.12",
    "@types/lodash": "^4.17.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-squirrel-startup": "^1.0.1",
    "wait-on": "^9.0.1"
  }
}
